
<style>
    .tablero {
        border: 1px solid black;
    }

    td {
        height: 75px;
        width: 75px;
        background-image: url(../../verde.jpg);
        border: 1px solid black;
    }

    img {
        display: block;
        width: 100%;
    }
</style>



<table class="tablero">
    @for (int fila = 0; fila < 9; fila++)
    {
        <tr>
            <!--fila-->
            @for (int columna = 0; columna < 9; columna++)
            {
                <td>
                    @foreach (var buscar in Model)
                    {

                        int inicio = ((int)char.ToUpper(char.Parse(buscar.columna))) - 64;
                        if (columna == inicio && fila == buscar.fila)
                        {
                            if (buscar.color == "blanco")
                            {
                                <img src="~/blanco.jpg" />
                                <label> @columna </label>
                                <label> @fila </label>
                            }
                            if (buscar.color == "negro")
                            {
                                <img src="~/negro.jpg" />
                            }

                        }

                    }
                </td>
            }
        </tr>
    }
</table>

<h2>
    Guardar Archivo
</h2>
@using (Html.BeginForm("CrearArchivo", "ArchivoCarga", FormMethod.Get, new { enctype = "multipart/form-data" }))
{
    <div class="jumbotron">
        <div class="col-md-4">
            <!--boton para cargar una partida guardada-->
            <button type="submit">Guardar</button>
        </div>
    </div>
}